{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["es2019"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "declaration": true
  },
  "exclude": ["node_modules", "**/__tests__/*.ts", "**/__fixtures__/*.ts"]
}
